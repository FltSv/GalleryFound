{
  "compilerOptions": {
    "sourceMap": true, // ソースマップを有効化
    "target": "ESNext",
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "strict": true, // 厳密モードとして設定
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,

    // React
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],

    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"]
    },

    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
