{
  "compilerOptions": {
    "sourceMap": true, // ソースマップを有効化
    "target": "ES5", // TSはECMAScript 5に変換
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "strict": true, // 厳密モードとして設定
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,

    // React
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM"]
  },
  "include": ["./src/**/*"]
}
