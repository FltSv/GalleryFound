{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "outDir": "./dist",

    /* Bundler mode */
    "jsx": "react-jsx",

    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
