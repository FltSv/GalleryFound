<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GalleryFound.Views.GalleryDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GalleryFound.Views"
    Title="GalleryDetailPage"
    x:DataType="views:GalleryDetailPageVm">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            HorizontalOptions="Start"
            Source="{Binding Product.Image}" />

        <VerticalStackLayout
            Grid.Row="1"
            Margin="10"
            Spacing="10">

            <Label Text=""/>
            <Label Text="{Binding Product.DisplayDate}" />
            <Label
                Text="{Binding Product.Gallery.Name}"
                TextColor="DeepSkyBlue" 
                TextDecorations="Underline">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenGalleryMapCommand}" CommandParameter="{Binding Product.Gallery}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="{Binding Product.Author.Name}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>