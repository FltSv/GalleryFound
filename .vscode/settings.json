{
  "livePreview.serverRoot": "/Hosting/public",

  // Prettier
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // eslint
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": ["./Hosting"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // TailwindCSS
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "yaml.schemaStore.enable": false,

  // スペルチェック除外リスト
  "cSpell.words": ["galleryfound", "Mypage"],
  "cSpell.ignoreRegExpList": [
    "\\..*", // プロパティ名などを無視
    "/.*", // パス名などを無視
    "\bkey\b.*", // APIKeyなど、keyをSuffixとした変数以降の値を無視
    "\bid\b.*" // IDなどの値を無視
  ],
  "cSpell.overrides": [
    {
      // TailwindCSSのカスタムフォント名を無視
      "filename": "**/*.{js,ts,jsx,tsx}",
      "ignoreRegExpList": ["font-.*"]
    }
  ],
  "cSpell.dictionaries": ["google", "cpp", "flutter"]
}
